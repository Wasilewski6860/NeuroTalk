<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatItemRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/avatar_default"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/chatChatNameAndTextContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/chatNameTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Chat name"/>

        <TextView
            android:id="@+id/chatLastMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:text="Last chat message"/>

    </LinearLayout>

    <TextView
        android:id="@+id/chatLastMessageTimeTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|end"
        android:paddingEnd="6dp"
        android:paddingStart="0dp"
        android:fontFamily="@font/poppins_regular"
        android:text="03.06.24"/>

</LinearLayout>