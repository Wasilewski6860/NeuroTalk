<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatMessageCloudRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    app:strokeColor="@android:color/transparent">

    <LinearLayout
        android:id="@+id/messageLinearContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="18dp">

        <FrameLayout
            android:id="@+id/messageTitleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/messageProducerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Producer"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/messageTimeText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:fontFamily="@font/poppins_light"
                android:text="01:35" />

        </FrameLayout>

        <TextView
            android:id="@+id/chatMessageCloudText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Hello, how are you doing?"
            android:textSize="18sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>