<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NeuroTalk" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/light_grey</item>

        <item name="android:textColor">@color/white</item>

        <item name="boxStrokeColor">@color/white</item>
        <item name="registrationBarItemColor">@color/black</item>

        <item name="botCloudBackgroundColor">@color/bot_message_background_night</item>

        <item name="android:tint">@color/white</item>

    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="UsualTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="RegistrationButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="cornerRadius">12dp</item>
    </style>

<!--  TODO: Need set stroke color when edit text is not on focus  -->
    <style name="RegistrationEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="cursorColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="test">
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="chatBackgroundStyle">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="PinkImageViewStyle">
        <item name="android:tint">@color/medium_pink</item>
    </style>

    <style name="MistakeDescContainer">
        <item name="cardBackgroundColor">@color/divider_night_theme_color</item>
    </style>

    <style name="MistakeDecoratorColor">
        <item name="cardBackgroundColor">@color/divider_day_theme_color</item>
    </style>

</resources>